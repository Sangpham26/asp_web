
@{
    ViewData["Title"] = "Upsert";
}

@model Book

@{
    ViewData["Title"] = "Upsert";
}

<div class="container">
    <form method="post" asp-action="Upsert">
        <div class="form-group">
            <label asp-for="Title">Tiêu đề sách</label>
            <input asp-for="Title" type="text" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PublicCationYear">Năm xuất bản</label>
            <input asp-for="PublicCationYear" type="number" class="form-control" />
            <span asp-validation-for="PublicCationYear" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Genre">Thể loại</label>
            <input asp-for="Genre" type="text" class="form-control" />
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AuthorID">Tác giả</label>
            <select asp-for="AuthorID" asp-items="@ViewBag.Authors" class="form-control">
                <option value="">Chọn tác giả</option>
            </select>
            <span asp-validation-for="AuthorID" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">@(@Model.BookId == 0 ? "Tạo mới" : "Cập nhật")</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}