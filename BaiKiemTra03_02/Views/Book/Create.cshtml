@model BaiKiemTra03_02.Models.Book

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h3>Thêm sách mới</h3>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post">
        <div class="form-group">
            <label asp-for="Title">Tiêu đề sách</label>
            <input asp-for="Title" type="text" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PublicCationYear">Năm xuất bản</label>
            <input asp-for="PublicCationYear" type="number" class="form-control" />
            <span asp-validation-for="PublicCationYear" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Genre">Thể loại</label>
            <input asp-for="Genre" type="text" class="form-control" />
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AuthorID">Tác giả</label>
            <select asp-for="AuthorID" class="form-control" asp-items="ViewBag.Authors">
                <option value="">Chọn tác giả</option>
            </select>
            <span asp-validation-for="AuthorID" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Tạo mới</button>
    </form>
</div>
