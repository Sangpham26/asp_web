@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Danh sách Tác giả</h1>
    <form asp-action="Index" method="get">
        <input type="text" name="searchString" placeholder="Nhập tên tác giả cần tìm ..." value="@ViewBag.SearchString" />
        <input type="submit" value="Tìm Kiếm" class="btn btn-primary" />
    </form>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Tên Tác giả</th>
                <th>Quốc tịch</th>
                <th>Ngày sinh</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Authors)
            {
                    <tr>
                        <td width="30%">@item.AuthorName</td>
                        <td width="30%">@item.Nationality</td>
                        <td width="30%">@String.Format("{0:dd/MM/yyyy}", item.BirthYear)</td>
                        <td width="40%">
                            <a asp-action="Edit" asp-route-id="@item.AuthorId" class="btn btn-warning">Edit</a> |
                            <a asp-action="Detail" asp-route-id="@item.AuthorId" class="btn btn-info">Detail</a> |
                            <a asp-action="Delete" asp-route-id="@item.AuthorId" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Author" asp-action="Create" class="btn btn-primary">Thêm mới</a>
</div>
