@model BaiKiemTra03_02.Models.Author

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h1>Xóa Tác Giả </h1>
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post" asp-action="DeleteConfirm" asp-route-id="@Model.AuthorId">


        <div class="form-group">
            <label asp-for="AuthorName">Tên tác giả</label>
            <input asp-for="AuthorName" class="form-control" />
            <span asp-validation-for="AuthorName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Nationality">Quốc tịch</label>
            <input asp-for="Nationality" class="form-control" />
            <span asp-validation-for="Nationality" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BirthYear">Năm sinh</label>
            <input asp-for="BirthYear" class="form-control" type="date" />
            <span asp-validation-for="BirthYear" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>

@section Scripts {
            <partial name="_ValidationScriptsPartial" />
}

